//obj_player: add event: steps:

if keyborad_check(vk_up)
{
    y-=1 
    sprite_index=spr_player_running
}
else
{
    sprite_index=spr_player
}
if keyboard_check(vk_down)
{
    y+=1
    sprite_index=spr_player_running
}
if keyboard_check(vk_left)
{
    x-=1
    sprite_index=spr_player_running
    image_xscale=-1
}
if keyboard_check(vk_right)
{
    x+=1
    sprite_index=spr_player_running
    image_xscale=1
}
